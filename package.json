    "@typescript-eslint/eslint-plugin": "^6.10.1",
    "@typescript-eslint/parser": "^6.10.1",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "glob": "^9.3.0",
    "prettier": "^3.1.4",
